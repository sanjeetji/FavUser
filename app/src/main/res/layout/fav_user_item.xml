<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_view"
            android:layout_width="100dp"
            android:text="Name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_name_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_name_view"
            android:layout_marginStart="4dp" />



        <TextView
            android:id="@+id/tv_email_view"
            android:layout_width="100dp"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_email_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_email_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_email_view"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/tv_userName_view"
            android:layout_width="100dp"
            android:text="Username"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_userName_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_userName_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_userName_view"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/tv_city_view"
            android:layout_width="100dp"
            android:text="City"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_userName_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_city_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_city_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_city_view"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/tv_website_view"
            android:layout_width="100dp"
            android:text="Website"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_city_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_website_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_website_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_website_view"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/tv_company_view"
            android:layout_width="100dp"
            android:text="Company"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_website_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_company_view"
            app:layout_constraintBottom_toBottomOf="@id/tv_company_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_company_view"
            android:layout_marginStart="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_company"
            android:layout_marginTop="5dp"
            android:background="@color/black" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>